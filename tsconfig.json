{
    "compilerOptions": {
        "outDir": "static/build",
        "target": "es5",
        "module": "es2015",
        "sourceMap": true,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "inlineSources": true,
        "preserveConstEnums": true,
        "lib": ["es6", "dom"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
       "node_modules"
    ]
}
