{
  "compileOnSave": false,
  "NARP": "module: \"es2020\" was initially in there, but gulp-typscript barfs",
  "compilerOptions": {
    "outDir": "./static/build",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
